<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/constraintbackground"
    tools:context=".view.ImageFragment">


    <TextView
        android:id="@id/signupPictureInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:text="Profil Fotoğrafınızı Seçiniz"
        android:textAlignment="center"
        android:textColor="@color/normalTextColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/signupProfilePictureButton"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupPictureInfoText"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/imageForward"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="32dp"
        android:drawableLeft="@drawable/forward"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupProfilePictureButton"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
